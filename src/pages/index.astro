---
import MainLayout from "@/layouts/MainLayout.astro";
import Image from "astro/components/Image.astro";

import cardImage from "@/assets/illustration-article.svg";
import avatar from "@/assets/image-avatar.webp";
---

<MainLayout title="Frontend Mentor | Blog Preview Card">
  <main class="flex h-screen items-center">
    <section
      class="bg-theme-white border-theme-black mx-auto w-[90%] max-w-96 rounded-3xl border p-6 shadow-[rgb(18,18,18)_8px_8px_0px_0px] sm:w-96"
    >
      <div class="mb-6">
        <Image
          src={cardImage}
          alt="Inspiring Symbology"
          loading={"eager"}
          class="w-full rounded-xl"
        />
      </div>
      <div class="">
        <h2
          class="bg-theme-yellow mb-2.5 inline-block rounded-sm px-3 py-1 text-sm font-extrabold"
        >
          Learning
        </h2>
        <p class="mb-4 text-sm">Published 21 Dec 2023</p>

        <h1>
          <a
            href="https://google.com"
            referrerpolicy="no-referrer"
            class="hover:text-theme-yellow text-2xl font-extrabold hover:cursor-pointer"
          >
            HTML & CSS foundations
          </a>
        </h1>
        <p class="text-theme-gray my-4">
          These languages are the backbone of every website, defining structure,
          content, and presentation.
        </p>
        <div class="flex items-center gap-3">
          <Image src={avatar} alt="Greg Hooper" width="35" loading={"eager"} />
          <p class="text-sm font-extrabold">Greg Hooper</p>
        </div>
      </div>
    </section>
  </main>
</MainLayout>
